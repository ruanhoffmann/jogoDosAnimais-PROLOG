mamifero(X) :-
    tem_pelo(X),
    da_leite(X).

ave(X) :-
    tem_pena(X),
    voa(X),oviparo(X).

carnivoro(X) :-
    come_carne(X),
    dentes_garras_olhosFrente(X).

ungulado(X) :-
    mamifero(X),
    rumina(X).

puma(X) :-
    mamifero(X),
    manchs_negras(X),
    cor_fulva(X),
    carnivoro(X).


tigre(X) :-
    mamifero(X),
    cor_fulva(X),
    manchas_negras(X),
    carnivoro(X).

girafa(X) :-
    ungulado(X),
    pescoco_comprido(X),
    manchas_negras(X).

zebra(X) :-
    ungulado(X),
    listras_negras(X).

avestruz(X) :-
    ave(X),
    preto_branco(X),
    pescoco_comprido(X).

pinguim(X) :-
    ave(X),
    nada(X),
    preto_branco(X).

albatroz(X) :-
    ave(X),
    voa(X).

morcego(X) :-
    mamifero(X),
    voa(X).

baleia(X) :-
    mamifero(X).











